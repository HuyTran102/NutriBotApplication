<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- semi-transparent black -->
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Foreground (Actual Button) -->
    <item android:top="4dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00B894" />
            <corners android:radius="30dp" />
        </shape>
    </item>
</layer-list>