<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.IntroFragment5"
    android:background="@drawable/bg_gradient">

    <!-- TODO: Update blank fragment layout -->
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Nhật ký\nquản lý thực đơn"
            android:textAlignment="center"
            android:textColor="#02947B"
            android:textSize="27dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="330dp"
            android:layout_height="430dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/intro_scanner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:lineSpacingExtra="8dp"
            android:text="Chụp ảnh thực phẩm và tính ra thành phần dinh dưỡng"
            android:textAlignment="center"
            android:textSize="18dp" />

        <Button
            android:id="@+id/get_started_btn"
            android:background="@drawable/nutriton_val_display"
            app:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bắt đầu"
            android:textSize="18dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</FrameLayout>