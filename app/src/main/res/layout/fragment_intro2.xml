<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.IntroFragment2"
    android:background="@drawable/bg_gradient">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Thực đơn\ncá nhân hóa"
            android:textAlignment="center"
            android:textColor="#02947B"
            android:textSize="27dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="330dp"
            android:layout_height="430dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/intro_menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:lineSpacingExtra="8dp"
            android:text="Xây dựng thực đơn phù hợp với thể trạng và chỉ số sức khoẻ hiện tại"
            android:textAlignment="center"
            android:textSize="18dp" />

    </LinearLayout>

</FrameLayout>